<div class='list-header'>
  <h1>Add a trip</h1>
</div>

<div class='form'>
  <%= simple_form_for @visit do |f| %>
    <%= f.association :country, collection: Country.order('name ASC'), label_method: :name, value_method: :id, prompt: "-- SELECT ONE --" %>
    <%= f.input :date, as: :date, start_year: Date.today.year - 10, end_year: Date.today.year, order: [:month, :year], discard_day: true %>
    <%= f.input :notes, placeholder: "max 30 characters", input_html: { maxlength: 30 } %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, class: "navigation new" %>
  <% end %>
  <%= link_to 'Cancel', visits_path, style:"color: grey" %>
</div>
